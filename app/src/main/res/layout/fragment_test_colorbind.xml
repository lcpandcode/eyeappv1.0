<!--该Fragment也有四个Fragment-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        style="@style/test_question">

        <ImageView
            style="@style/test_question_img"
            android:src="@mipmap/colorbind_demo" />
        <TextView
            style="@style/test_question_title"
            android:text="1、上面图片您看到的数字是？"/>
        <RadioGroup
            style="@style/test_question_option">
            <RadioButton style="@style/test_question_option_rbtn"
                android:text="数字1"/>
            <RadioButton style="@style/test_question_option_rbtn"
                android:text="数字2"/>
            <RadioButton style="@style/test_question_option_rbtn"
                android:text="数字6"/>
            <RadioButton style="@style/test_question_option_rbtn"
                android:text="数字7"/>
        </RadioGroup>

        <Button
            style="@style/test_question_btn_next"/>

    </LinearLayout>

</LinearLayout>