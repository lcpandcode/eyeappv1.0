<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <View style="@style/knowledge_main_bar_line" />
    <LinearLayout
        android:id="@+id/knowledge_main_bar"
        style="@style/knowledge_main_bar">

        <LinearLayout style="@style/knowledge_main_bar_label">

            <TextView
                android:id="@+id/knowledge_main_bar_papertitle"
                style="@style/knowledge_main_bar_label"
                android:text="震惊每天吃胡萝卜尽可以提高三倍视力" />
        </LinearLayout>

        <LinearLayout style="@style/knowledge_main_bar_label_bottom">
            <LinearLayout
                style="@style/knowledge_main_bar_label_bottom_papertype">
                <TextView
                    android:id="@+id/knowledge_main_bar_papersign"
                    style="@style/knowledge_main_bar_label_bottom_papersign_content"
                    android:text="热文" />
            </LinearLayout>

            <TextView
                android:id="@+id/knowledge_main_bar_papertype"
                style="@style/knowledge_main_bar_label_bottom_paperinfo"
                android:text="讲座通知"/>
            <TextView
                android:id="@+id/knowledge_main_bar_viewcount"
                style="@style/knowledge_main_bar_label_bottom_paperinfo"
                android:text="2333"/>
            <TextView
            style="@style/knowledge_main_bar_label_bottom_paperinfo"
            android:layout_marginLeft = "0dp"
            android:text="浏览"/>
            <TextView
                android:id="@+id/knowledge_main_bar_date"
                style="@style/knowledge_main_bar_label_bottom_paperinfo"
                android:text="2018-02-02"/>
            <TextView
                android:id="@+id/knowledge_main_bar_date_paperid"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="invisible"/><!--这个TextView用来存储id值-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

