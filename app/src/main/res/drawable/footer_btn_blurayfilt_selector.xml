<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <!--被选中时（选择大概有以下四种状态）的按钮都统一显示为selected形式-->
  <item android:state_focused="true" android:drawable="@mipmap/footer_btn_blurayfilt_selected" />
  <item android:state_pressed="true" android:drawable="@mipmap/footer_btn_blurayfilt_selected"  />
  <item android:state_selected="true" android:drawable="@mipmap/footer_btn_blurayfilt_selected" />
  <item android:state_checked="true"  android:drawable="@mipmap/footer_btn_blurayfilt_selected"></item>
  <!--默认时按钮显示的样式-->
  <item android:drawable="@mipmap/footer_btn_blurayfilt" />
</selector>
